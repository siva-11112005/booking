{
  "name": "eswari-physiotherapy",
  "version": "1.0.0",
  "description": "Physiotherapy appointment booking system",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "npm run install-backend && npm run install-frontend && npm run build-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm start\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "keywords": ["physiotherapy", "appointment", "booking"],
  "author": "Eswari",
  "license": "MIT"
}
